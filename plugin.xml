<plugin>
	<nom>Urls Etendues</nom>
	<auteur>Collectif SPIP</auteur>
	<version>1.0.0</version>
	<version_base>1.0.0</version_base>
	<etat>test</etat>
	<slogan>Gestion des variantes d'URL signifiantes ou non</slogan>
	<description>Gestion des variantes d'URL signifiantes ou non</description>
	<prefix>urls</prefix>

	<install>base/urls.php</install>
	<pipeline>
		<nom>declarer_tables_auxiliaires</nom>
		<inclure>base/urls.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_interfaces</nom>
		<inclure>base/urls.php</inclure>
	</pipeline>
	<pipeline>
		<nom>affiche_milieu</nom>
		<inclure>urls_pipeline.php</inclure>
	</pipeline>
	<pipeline>
		<nom>boite_infos</nom>
		<inclure>urls_pipeline.php</inclure>
	</pipeline>
	<pipeline>
		<nom>arbo_creer_chaine_url</nom>
		<action>arbo_creer_chaine_url</action>
		<inclure>urls/arbo.php</inclure>
	</pipeline>
	<pipeline>
		<nom>propres_creer_chaine_url</nom>
		<action>propres_creer_chaine_url</action>
		<inclure>urls/propres.php</inclure>
	</pipeline>

	<bouton id='controler_urls' parent='bando_publication' position="-1">
		<icone>images/url-16.png</icone>
		<titre>urls:icone_controler_urls</titre>
	</bouton>
	<categorie>statistique</categorie>
	<traduire gestionnaire="salvatore" module="urls" reference="fr" />
	<necessite id="SPIP" version="[3.0.0-dev;)" />
</plugin>